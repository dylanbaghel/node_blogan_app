{{#if local_error}}
<div class="msg">
    <div class="msg__content msg__content--error">
        <p>{{local_error}}</p>
        <a id="close" aria-label="close">&times;</a>
    </div>
</div>
{{/if}}
<div class="container">
    <h1>Add Post</h1>
    <hr>
    <br>
    <div class="container--add-post">
        <form method="POST" action="/posts" class="container--add-post__form">
            <label for="title">Title</label>
            <input type="text" placeholder="Enter Title" name="title" {{#if title}} value="{{title}}" {{/if}}>
            <label for="body">Body</label>
            <textarea name="body" placeholder="Enter Body">{{#if body}}{{body}}{{/if}}</textarea>
            <label class="checkbox-label"><input type="checkbox" name="published"> Published</label>
            <button class="primary-btn" type="submit">Add Post</button>
        </form>
    </div>
</div>